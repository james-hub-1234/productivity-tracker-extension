{
  "manifest_version": 3,
  "name": "Productivity Tracker",
  "version": "1.1",
  "description": "Track and rate your website visits with excuses",
  "homepage_url": "https://github.com/james-hub-1234/productivity-tracker-extension",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
